<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_margin="20dp"
    tools:showIn="@layout/fragment_movie_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/d_image_view_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" />

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/d_image_view_poster"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/d_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DetailsFragmentLabel"
                android:gravity="center_horizontal"
                android:layout_below="@id/separator1"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/d_movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DetailsFragmentContent"
                android:layout_below="@id/d_movie_title" />

            <TextView
                android:id="@+id/d_movie_release_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailsFragmentLabel"
                android:text="@string/release_date"
                android:layout_below="@id/d_movie_overview" />

            <TextView
                android:id="@+id/d_movie_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailsFragmentContent"
                android:layout_below="@id/d_movie_overview"
                android:layout_toEndOf="@id/d_movie_release_date_label" />

            <TextView
                android:id="@+id/d_movie_vote_average_label"
                style="@style/DetailsFragmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/d_movie_release_date"
                android:text="@string/vote_average" />

            <TextView
                android:id="@+id/d_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailsFragmentContent"
                android:layout_below="@id/d_movie_release_date"
                android:layout_toEndOf="@id/d_movie_vote_average_label" />

        </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>